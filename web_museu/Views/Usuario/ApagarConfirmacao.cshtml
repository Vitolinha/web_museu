@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de exclusão de usuário";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário <strong>@Model.Nome</strong>?</h3>
</div>

<div class="mt-4">
    <!-- Botões de Cancelar e Confirmar -->
    <a class="btn btn-secondary btn-block" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>

    <form asp-action="Apagar" asp-controller="Usuario" method="post" class="mt-2">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger btn-block">Confirmar exclusão</button>
    </form>
</div>
